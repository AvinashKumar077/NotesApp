<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_edit_text.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/transparent"> <!-- Ripple color from the theme -->

    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Background color -->
            <corners android:radius="10dp" /> <!-- Corner radius for ripple -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Background color -->
            <stroke
                android:width="1dp"
                android:color="@color/black" /> <!-- Border color -->
            <corners android:radius="10dp" /> <!-- Corner radius -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" /> <!-- Padding inside the EditText -->
        </shape>
    </item>

</ripple>
